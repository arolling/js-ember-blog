<form class="form-horizontal">
  <div class="form-group">
    <label for="author" class="col-sm-2 control-label">Author:</label>
    <div class="col-sm-10">
      {{input type="text" class="form-control" value=author id="author" placeholder=post.author}}
    </div>
  </div>

  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">Title:</label>
    <div class="col-sm-10">
      {{input type="text" class="form-control" value=title id="title" placeholder=post.title}}
    </div>
  </div>

  <div class="form-group">
    <label for="content" class="col-sm-2 control-label">Body:</label>
    <div class="col-sm-10">
      {{textarea type="text" rows='6' class="form-control" value=post.content id="content" placeholder=post.content}}
    </div>
  </div>

  <div class="form-group">
    <label for="datePosted" class="col-sm-2 control-label">Date:</label>
    <div class="col-sm-10">
      {{input type="date" class="form-control" value=datePosted id="datePosted" placeholder=post.datePosted}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button  class="btn btn-default" {{action "update" post}}>Update Post</button>
    </div>
  </div>
</form>
<hr>
<button class="btn btn-danger" {{action "deletePost" post}}>Delete</button>
